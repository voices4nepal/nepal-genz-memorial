{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Memorial Profiles",
  "description": "Schema for memorial profiles in Nepal GenZ Memorial",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["name", "age", "photo", "description"],
    "properties": {
      "name": {
        "type": "string",
        "minLength": 1,
        "maxLength": 100,
        "description": "Full name of the person"
      },
      "age": {
        "type": "integer",
        "minimum": 1,
        "maximum": 150,
        "description": "Age at the time of passing"
      },
      "photo": {
        "type": "string",
        "pattern": "^images/[a-z0-9\\-_.]+\\.(jpg|jpeg|png)$",
        "description": "Path to the profile photo, must be in images/ directory"
      },
      "description": {
        "type": "string",
        "minLength": 10,
        "maxLength": 200,
        "description": "Memorial description, maximum 200 characters"
      }
    },
    "additionalProperties": false
  }
}
